<network>
  <name>maas</name>
  <forward mode='nat'>
    <nat>
      <port start='1024' end='65535'/>
    </nat>
  </forward>
  <bridge name='maasbr0' stp='on' delay='0'/>
  <mac address='52:54:00:80:a9:66'/>
  <ip
    address='{{ maas_cidr | ipaddr("1") | ipaddr("address") }}'
    netmask='{{ maas_cidr | ipaddr("netmask") }}'>
  </ip>
</network>

